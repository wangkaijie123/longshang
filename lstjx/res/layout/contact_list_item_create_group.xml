<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="90dip"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/alpha"
        android:layout_width="fill_parent"
        android:layout_height="25dip"
        android:background="#D6D6D6"
        android:paddingBottom="2dip"
        android:paddingLeft="13dip"
        android:paddingTop="2dip"
        android:text="2131231232"
        android:textColor="@color/mGray"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/create_group_item_cb"
               android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/create_group_item_headimg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@id/create_group_item_cb"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/lingshi1" />

        <TextView
            android:id="@+id/create_group_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="15dip"
            android:text="2131231232"
            android:textColor="#000000"
            android:textSize="18dp" />
    </RelativeLayout>

</LinearLayout>