<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <io.rong.imkit.widget.AsyncImageView
        android:id="@+id/item_friend_portrait"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:padding="5dp"
        android:src="@drawable/rc_default_portrait" />

    <TextView
        android:id="@+id/item_friend_username"
        style="@style/DemoTextStyleBigBlack"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/item_friend_portrait" />

    <TextView
        android:id="@+id/item_friend_state"
        style="@style/DemoTextStyleBigBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/de_add_friend_selector"
        android:gravity="center" />

