<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/contactlist_title"
        android:layout_marginTop="5dip"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:text="推荐群聊" />

        <RelativeLayout
            android:id="@+id/new_friend"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="#ffffff" >

            <ImageView
                android:id="@+id/new1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dip"
                android:src="@drawable/qun_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/new1"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/new1"
                android:text="龙商买货卖货群"
                android:textColor="@color/text_huise"
                android:textSize="15dip" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/group_list_liner" />

        <RelativeLayout
            android:id="@+id/qun_friend"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="#ffffff" >

            <ImageView
                android:id="@+id/new2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dip"
                android:src="@drawable/qun_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/new2"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/new2"
                android:text="龙商发车找车群"
                android:textColor="@color/text_huise"
                android:textSize="15dip" />
        </RelativeLayout>
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dip"
            android:text="我的群聊" />
        
    </LinearLayout>

</RelativeLayout>