<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


            <RelativeLayout
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/background_white" >

                <RelativeLayout
                    android:id="@+id/main_listview_relative1"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" >

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="250dp"
                        android:background="@android:color/white" >

                        <com.lst.lstjx.view.ProBannerView
                            android:id="@+id/page_banner_view"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:fadingEdgeLength="0.0dp"
                            android:keepScreenOn="true"
                            android:soundEffectsEnabled="false" />
                    </FrameLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/sale_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pro_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:maxWidth="300dp"
                    android:singleLine="true"
                    android:textColor="#828582"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/img_cankao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/sale_count"
                    android:layout_alignLeft="@id/sale_count"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/flash_cankaojia" />

                <TextView
                    android:id="@+id/price_cankao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/sale_count"
                    android:layout_alignLeft="@id/img_cankao"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/pro_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/pro_name"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:maxEms="7"
                    android:singleLine="true"
                    android:textColor="#E25E21"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/pro_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/sale_count"
                    android:layout_below="@+id/main_listview_relative1"
                    android:maxWidth="200dp"
                    android:textColor="#5C0B07"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/stroe_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/sale_count"
                    android:layout_alignBottom="@+id/sale_count"
                    android:layout_alignRight="@+id/pro_price"
                    android:maxWidth="300dp"
                    android:singleLine="true"
                    android:textColor="#828582"
                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/pro_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:maxWidth="300dp"
                    android:text="商品详细："
                    android:textColor="@color/background_black"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical" />
        </LinearLayout>
   


